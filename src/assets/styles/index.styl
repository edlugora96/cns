.slick-arrow
  width 100% !important
  height 100% !important

.angle.left:before
  content "\f104"
  font-size 2.5rem
  color #fff;
.angle.right:before
  content "\f105"
  font-size 2.5rem
  color #fff
.color-change
  color #eee !important
  background #0098D6 !important
  border-color #0098D6 !important
.angle
  display: grid !important;
  justify-items: center;
  align-items: center;
  cursor: pointer;
#main-header
  min-height 100vh
  display grid
  justify-items center
  .scrollDown
    display block
    width 17px
    height 27px
    border 2px solid #fff
    border-radius 8px
    margin auto
    right 0
    left 0
    position absolute
    bottom 10px
    &:hover > span
      top 14px
      transition top 0.3s ease
    span
      display block
      margin auto
      width 2px
      height 3px
      background-color #fff
      position relative
      top 5px
      transition top 0.3s ease
  .hero-btn
    margin-top 2rem
  .hero-text
    display grid
    width 100vw
    height calc(100vh - 98px)
    justify-items center
    align-items center
    text-align center
    font-family "Montserrat", sans-serif !important
    font-weight 300
    color #fff
    p
      font-size 20px
      letter-spacing 6px
      margin-bottom 0
    h2
      font-weight 600
      font-size 50px
      color #fff
      letter-spacing -1px
      margin-top 16px
    h2 + p
      letter-spacing normal
      margin-top 15px
      margin-bottom 16px
.logo, .logo-invert
  height 100%
  background-image url('../img/1.png')
  background-repeat no-repeat
  background-position 0 center
.logo-invert
  background-image url('../img/l2.png')
#topbar
  top 0
  width 100%
  display grid
  align-items center
  grid-template-columns 60% 1fr
  height 98px
  border-bottom 1px solid rgba(255,255,255,.15)
  max-width 1200px
  margin 0 auto
  .navbar.mobile
    align-items center
    position absolute
    background-color #00334D
    top 97px
    width 100%
    text-align center
    grid-template-rows repeat(auto-fill,minmax(1rem,1fr))
  .navbar
    display none
    &.active
      display grid !important
    a
      color #fff
      font-weight bold
      display grid
.slick-slider
  display grid
  grid-template-columns 80px 1fr 80px
  grid-template-areas "cleft cshow cright"
  width 100vw
  align-items center
.slick-prev
  width 80px
  grid-area cleft
  border-right 1px solid #435969
.slick-next
  border-left 1px solid #435969
  width 80px
  grid-area cright
.slick-list
  grid-area cshow
.slick-track > *
  max-width 300px

.slider
  display grid
  background-image url("../img/platform-bg.jpg")
  a
    color #fff
  .slider-box
    width calc( 300px *8 )
  .item
    display inline-grid !important
    border-right 1px solid #435969
    text-align center
    height 200px
    justify-content center
    align-content center
    padding 0 13px
    i
      margin-top 1rem
      display grid
      width 100%
      height 80px
    .text
      font-family "Raleway", sans-serif
      font-size 16px
      font-weight 600
      color #fff
      margin-top 0px
      min-height 34px
    a
      align-self center
  .show-box
    max-width calc(100% - 40px)
    overflow hidden
.top-footer, .slider
  a
    display inline-block
    cursor pointer
    transition all 0.5s ease
    &:hover, &:hover h6
      color #18c967 !important

#footer
  text-align center
  display grid
  align-items end
  min-height 100vh
  position relative
  z-index 5
  background-image url("../img/footer-bg-1.jpg")
  background-size cover
  background-position center top
  padding-top 60px
  padding-left 1rem
  padding-right 1rem
  color #fff
  .logo, .logo-invert
    background-position: center center;
  &:before
    content ""
    position absolute
    background-color #00334D
    opacity 0.92
    top 0
    left 0
    width 100%
    height 100%
  .section-title
    font-weight bold
    font-size 1.2rem
    margin-top 0.5rem
  a
    color #fff
    &:hover
      color #18c967
  .logo, .logo-invert
    height 8rem
  .logo-invert
    width 10rem
  .top-footer
    position relative
    z-index 2
    padding-bottom 60px
    display grid
    justify-items center
    grid-column-gap 1rem
    & > *
      display grid
  .bottom-footer
    position relative
    z-index 2
    border-top 1px solid #28475e
    min-height 68px
    display grid
    align-items center
    .copy
      padding 1rem 0
    .section-copy
      padding 1rem 0
    img
      margin-left 23px

@media screen and (min-width : 768px)
  .footer-sections
    display grid
    grid-auto-flow column
    padding 0 5rem
    grid-column-gap 5rem
    .social-footer a
      margin-right 20px
  #footer
    text-align auto
    padding-left 3rem
    padding-right 3rem
    .logo, .logo-invert
      background-position 0 center
    .bottom-footer
      grid-template-columns 75% 1fr
  .slick-slider
    padding-right 1rem
  .slider
    .item
      padding 0 35px
    .text
      font-size 20px
  .hero-text
